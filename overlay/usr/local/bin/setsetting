#!/bin/sh

give_message()
{
    if [ $? -eq 0 ] ; then
        echo "Config changed"
    else
        echo "Error updating config">2 ; exit 1
    fi
}

case $1 in
    port) sed -i '' -e 's/DB_PORT=.*/DB_PORT=$2/g' /usr/local/www/firefly-iii/.env
          give_message
          ;;
    *) echo "Unknown option">&2 ; exit 1
            ;;
esac
